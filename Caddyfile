{$WIKIADVISER_ROOT_DOMAIN} {
	redir https://{$WIKIADVISER_FRONTEND_DOMAIN}

	rewrite /robots.txt ./robots.txt # Disable search engine indexing
}

{$WIKIADVISER_FRONTEND_DOMAIN} {
	root * /usr/share/caddy/html
	encode gzip
	try_files {path} /index.html
	file_server

	rewrite /robots.txt ./robots.txt # Disable search engine indexing
}

{$WIKIADVISER_BACKEND_DOMAIN} {
	reverse_proxy wikiadviser-api:{$WIKIADVISER_API_PORT}
	request_body {
		max_size 10MB
	}
}

