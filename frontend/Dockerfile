FROM node:lts-alpine as build-stage
WORKDIR /wikiadviser-frontend
COPY . .

ARG SUPABASE_PROJECT_URL
ARG SUPABASE_SECRET_PROJECT_TOKEN
ARG WIKIADVISER_API_ENDPOINT
ARG MEDIAWIKI_ENDPOINT
ARG WIKIADVISER_ROOT_DOMAIN
ARG WIKIADVISER_LANGUAGES
ARG SHARE_LINK_DAY_LIMIT

ENV SUPABASE_PROJECT_URL ${SUPABASE_PROJECT_URL}
ENV SUPABASE_SECRET_PROJECT_TOKEN ${SUPABASE_SECRET_PROJECT_TOKEN}
ENV WIKIADVISER_API_ENDPOINT ${WIKIADVISER_API_ENDPOINT}
ENV MEDIAWIKI_ENDPOINT ${MEDIAWIKI_ENDPOINT}
ENV WIKIADVISER_ROOT_DOMAIN ${WIKIADVISER_ROOT_DOMAIN}
ENV WIKIADVISER_LANGUAGES ${WIKIADVISER_LANGUAGES}
ENV SHARE_LINK_DAY_LIMIT ${SHARE_LINK_DAY_LIMIT}

RUN npm install && npm run build

FROM caddy:2.7.2-alpine as production-stage
COPY --from=build-stage /wikiadviser-frontend/dist/spa /usr/share/caddy/html
CMD ["caddy", "run", "--config", "/etc/caddy/Caddyfile"]
